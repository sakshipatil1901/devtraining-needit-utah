    gs.info("Business Rule 'Set state to in progress' started execution for incident: " + current.number);

    // Check the conditions and perform actions
    if (current.assignment_group && current.assigned_to) {
        // Log the current values of key fields
        gs.info("Assignment Group: " + current.assignment_group.getDisplayValue());
        gs.info("Assigned to: " + current.assigned_to.getDisplayValue());
        
